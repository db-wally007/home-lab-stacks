{% raw %}
logging {
	level = "warn"
}

prometheus.remote_write "mimir" {
  endpoint {
    url = "https://mimir.ref:9096/api/v1/push"

    tls_config {
{% endraw %}
      ca_file = "/etc/pki/ca-trust/source/anchors/refinst_ca.crt"
      cert_file = "/etc/pki/ca-trust/source/anchors/refinst_{{ inventory_hostname }}.crt"
      key_file = "/etc/pki/ca-trust/source/anchors/refinst_{{ inventory_hostname }}.key"
{% raw %}
    }
  }
}
{% endraw %}